<h1>Create post</h1>

<%= form_with(model: @post, url: user_posts_path(@user.id)) do |form| %>

  <div class="col-md-6 mb-3">
    <%= form.label :title, style: "display: block",class: "fw-bold form-label" %>
    <%= form.text_field :title, class: "form-control", placeholder: "Title" %>
  </div>

  <div class="col-md-6 mb-3">
    <%= form.label :text, style: "display: block",class: "fw-bold form-label" %>
    <%= form.text_area :text, class: "form-control", placeholder: "Content", rows: "3" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Create Post", class: 'btn btn-primary' %>
  </div>
<% end %>