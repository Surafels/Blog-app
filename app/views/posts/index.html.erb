<div class="sub-container card mb-3" style="max-width: 540px;">
<div class="card mb-3">
 <div class="row g-0">
    <div class="col-md-4">
      <img  src="<%= @user.photo_url %>"  class="img-fluid img-thumbnail rounded-start"  alt=<%= @user.name %>>
    </div>
    <div class="card-body">
      <h5 class ="card-title"><%= @user.name %></h5>
      <p class="card-text text-end">Number of posts: <%= @user.posts_counter %></p>
    </div>
    </div>
    </div>

<% if @posts.present? %>
<% @posts.each do |post|%>
<div class="card mb-2">

    <div class="card-body">
        <h5 class="card-title"><%= post.title%></h5>
        <p class="card-text"><%= post.text%></p>
        <p class="card-text text-end">Comment: <%= post.comments_counter%>, Like: <%= post.likes_counter%></p>
</div>

<% post.most_recent_comments.each do |comment|%>
<div class="card mb-2">
    <div class="card-body">
        <p class="card-text"><%= comment.author.name%> :<%= comment.text%></p>
        </div>
        </div>
        <div class="text-center">
            <% end %>
<% end %>

<div class="text-center mb-5">
        <%= link_to 'Pagination', user_posts_path(@user), class: 'btn btn-primary' %>
    </div>

    <% else %>

    <p>There is no posts for this user</p>

<% end %>
</div>